  "main": "./dist/index.js",
  "scripts": {
    "dev-local": "npm run build && NODE_ENV=test nodemon ./dist/index",
    "test": "npm run build && NODE_ENV=test mocha --timeout 10000 -r ts-node/register ./dist/src/tests/launchTest.spec.js --exit",
    "dev": "ts-node-dev --poll index.ts",
    "build": "rimraf ./dist && tsc",
    "docker-compose-up:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker-compose-down:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml down -v",
    "docker-compose-up:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --build",
    "docker-compose-down:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml down -v"
  },
